# NeuroCognitive Architecture (NCA) Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL for persistent storage (optional - defaults to in-memory)
# Examples:
# DATABASE_URL=sqlite:///neuroca.db
# DATABASE_URL=postgresql://user:password@localhost:5432/neuroca
# DATABASE_URL=mysql://user:password@localhost:3306/neuroca
DATABASE_URL=sqlite:///neuroca.db

# =============================================================================
# REDIS CONFIGURATION (Optional - for enhanced caching)
# =============================================================================

# Redis URL for caching and session storage (optional)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LLM PROVIDER API KEYS (Optional)
# =============================================================================

# OpenAI API Key (optional - not needed for Ollama)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google/Vertex AI credentials (optional)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama base URL (defaults to localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Default model for Ollama
OLLAMA_DEFAULT_MODEL=gemma2:2b

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment type (development, staging, production)
NCA_ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=true
